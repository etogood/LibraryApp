<Window x:Class="LibraryApp.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LibraryApp"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="400">
    <StackPanel>
        <Label Content="Авторизация" HorizontalAlignment="Center" FontSize="25"/>
        <StackPanel Orientation="Horizontal" Margin="0 15 0 0" HorizontalAlignment="Center">
            <Label Content="Логин"/>
            <TextBox Height="20" Width="250" Name="loginTBX"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 20 8 20" HorizontalAlignment="Center">
            <Label Content="Пароль"/>
            <PasswordBox Height="20" Width="250" Name="passwordPBX"/>
        </StackPanel>
        <Button Height="30" Width="150" Content="Войти" Click="LogInButtonClick"/>
    </StackPanel>
</Window>
